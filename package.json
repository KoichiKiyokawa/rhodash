{
  "name": "rhodash",
  "version": "1.4.0",
  "description": "A deadly simple alternative to lodash",
  "types": "dist/index.d.ts",
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "browser": "dist/index.min.js",
  "sideEffects": false,
  "files": [
    "package.json",
    "dist",
    "src"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/KoichiKiyokawa/rhodash"
  },
  "scripts": {
    "prepare": "husky install",
    "build": "rimraf dist && rollup -c",
    "lint": "prettier --write . --ignore-path .gitignore && eslint --fix . --ignore-path .gitignore",
    "lint:ci": "prettier --check . --ignore-path .gitignore && eslint . --ignore-path .gitignore",
    "test": "jest --coverage",
    "new_version": "zx scripts/new_version.ts",
    "run-ts": "ts-node -O '{\"module\":\"commonjs\"}'"
  },
  "keywords": [
    "lodash",
    "utility-library"
  ],
  "author": "K.Kiyokawa",
  "license": "MIT",
  "devDependencies": {
    "@rollup/plugin-typescript": "8.3.0",
    "@types/jest": "26.0.24",
    "@typescript-eslint/eslint-plugin": "4.28.3",
    "@typescript-eslint/parser": "4.28.3",
    "eslint": "7.32.0",
    "eslint-config-prettier": "8.3.0",
    "husky": "7.0.4",
    "jest": "27.4.5",
    "lint-staged": "11.2.6",
    "prettier": "2.5.1",
    "rimraf": "3.0.2",
    "rollup": "2.61.1",
    "rollup-plugin-terser": "7.0.2",
    "ts-jest": "27.0.3",
    "ts-node": "10.4.0",
    "typescript": "4.3.5",
    "zx": "2.0.0"
  },
  "volta": {
    "node": "16.3.0",
    "npm": "7.18.1"
  },
  "lint-staged": {
    "**/*.{ts}": [
      "eslint --fix",
      "git add"
    ],
    "**/*.{js,ts,md,json,yml}": [
      "prettier --write",
      "git add"
    ]
  }
}
