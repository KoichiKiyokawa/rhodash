{
  "name": "rhodash",
  "version": "2.0.0",
  "description": "A deadly simple alternative to lodash",
  "types": "dist/index.d.ts",
  "main": "dist/index.cjs.js",
  "module": "dist/index.es.js",
  "browser": "dist/index.iife.js",
  "sideEffects": false,
  "files": [
    "package.json",
    "dist",
    "src"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/KoichiKiyokawa/rhodash"
  },
  "keywords": [
    "lodash",
    "utility-library"
  ],
  "author": "K.Kiyokawa",
  "license": "MIT",
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "prepare": "husky install",
    "build": "vite build && tsc && esmo scripts/write_banner.ts",
    "lint": "prettier --write . && eslint --fix . --ignore-path .gitignore",
    "lint:ci": "prettier --check . && eslint . --ignore-path .gitignore",
    "test": "vitest --run --coverage",
    "release": "esmo scripts/release.ts",
    "doc:dev": "vitepress dev docs",
    "doc:build": "vitepress build docs",
    "doc:serve": "vitepress serve docs"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "5.12.1",
    "@typescript-eslint/parser": "5.12.1",
    "c8": "7.11.0",
    "eslint": "8.10.0",
    "eslint-config-prettier": "8.4.0",
    "esno": "0.14.1",
    "husky": "7.0.4",
    "lint-staged": "12.3.4",
    "prettier": "2.5.1",
    "typescript": "4.5.5",
    "vite": "2.8.4",
    "vitepress": "0.22.3",
    "vitest": "0.5.4",
    "zx": "5.1.0"
  },
  "packageManager": "pnpm@6.32.1",
  "lint-staged": {
    "**/*.{ts}": [
      "eslint --fix"
    ],
    "**/*.{js,ts,md,json,yml}": [
      "prettier --write"
    ]
  }
}
